"set diffexpr=DiffIgnoreAllWhitespace()
function! DiffIgnoreAllWhitespace()
   let opt = ""
   if &diffopt =~ "icase"
     let opt = opt . "-i "
   endif
   if &diffopt =~ "iwhite"
     let opt = opt . "-bBw "
   endif
   silent execute "!diff " . opt . v:fname_in . " " . v:fname_new . " > " . v:fname_out
endfunction

